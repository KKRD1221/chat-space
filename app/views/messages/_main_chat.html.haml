.main

  .main__groupinfo
    .main__group
      .main__groupname
        =@group.name
      %ul.main__memberlist
        Member :
        %li.main__member 
          - @group.users.each do |user|
            =user.name
    = link_to edit_group_path(@group), class: "main__edit" do
      Edit
    
  .main__messagelist
    = render @messages

  .main__messagefield
    = form_with model: [@group, @message], html: {class: "main__form"}, local: true do |f|
      .main__messageform
        = f.text_field :content, class: 'main__messagecontent', placeholder: 'type a message'
        = f.label :image, class: 'main__messageimage' do
          = icon('far', 'image', class: 'main__icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'main__send'



  
